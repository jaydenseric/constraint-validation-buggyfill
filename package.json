  "description": "Prevents invalid form submission in browsers that improperly support the HTML forms spec (i.e. Safari). The first invalid element is focused after alerting the validation message.",
  "license": "MIT",
  "author": {
    "name": "Jayden Seric",
    "email": "me@jaydenseric.com",
    "url": "https://jaydenseric.com"
  },
  "repository": "github:jaydenseric/constraint-validation-buggyfill",
  "homepage": "https://github.com/jaydenseric/constraint-validation-buggyfill#readme",
  "bugs": "https://github.com/jaydenseric/constraint-validation-buggyfill/issues",
  "funding": "https://github.com/sponsors/jaydenseric",
  "keywords": [
    "HTML5",
    "form",
    "forms",
    "constraint",
    "constraints",
    "validation",
    "buggyfill",
    "polyfill"
  ],
  "files": [
    "index.js"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=10"
  },
  "browserslist": "> 0.5%, not dead, IE >= 10, ExplorerMobile >= 10, Firefox >= 4, Chrome >= 10, Safari >= 5, iOS >= 4, Android >= 4, BlackBerry >= 7, KaiOS >= 2.5",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-env": "^13.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-compat": "^3.3.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsdoc": "^19.0.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1"
  },
  "scripts": {
    "test": "npm run test:eslint && npm run test:prettier",
    "test:eslint": "eslint .",
    "test:prettier": "prettier '**/*.{json,yml,md}' -l",
    "prepublishOnly": "npm test"
  }
}
